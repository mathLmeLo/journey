{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],      
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],       
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,     
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@common/*": [
        "./src/common/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@docs/*": [
        "./src/docs/*",
        "./src/modules/blog/infra/docs/*.ts",
        "./src/modules/areaCode/infra/docs/*.ts"    
      ],
      "@models/*": [
        "./src/modules/blog/infra/mongoose/models/*.ts",
        "./src/modules/areaCode/infra/mongoose/entities/*.ts"
      ],
      "@routes/*": [
        "./src/modules/blog/infra/http/routes/*.ts",
        "./src/modules/areaCode/infra/http/routes/*.ts"
      ],
      "@factories/*": ["./src/config/factories/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
